          <test_script_entry>/opt/tct-netinfo-w3c-tests/netinfo/Navigator_connection.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="WebAPI/Device/The Network Information API" execution_type="auto" id="NetworkInformation_type" purpose="Check if the NetworkInformation.type attribute exists, readonly and type of string">
        <description>
          <test_script_entry>/opt/tct-netinfo-w3c-tests/netinfo/NetworkInformation_type.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="WebAPI/Device/The Network Information API" execution_type="auto" id="NetworkInformation_onchange" purpose="Check if the NetworkInformation.onchange attribute exists, readonly and type of object">
        <description>
          <test_script_entry>/opt/tct-netinfo-w3c-tests/netinfo/NetworkInformation_onchange.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="WebAPI/Device/The Network Information API" execution_type="auto" id="NetworkInformation_downlinkMax" purpose="Check if the NetworkInformation.downlinkMax attribute exists, readonly and type of number">
        <description>
          <test_script_entry>/opt/tct-netinfo-w3c-tests/netinfo/NetworkInformation_downlinkMax.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
