        </description>
      </testcase>
      <testcase component="WebAPI/IVI/CSS" execution_type="manual" priority="P1" id="filter_position_sticky" purpose="Check if position sticky element works well.">
        <description>
          <steps>
            <step order="1">
              <step_desc>Click "Run" button.</step_desc>
              <expected>The page displayed.</expected>
            </step>
            <step order="2">
              <step_desc>Scroll down this page as much as you can.</step_desc>
              <expected>Passes if only the green line "A" and the word "Finished" displayed.</expected>
            </step>
          </steps>
          <test_script_entry test_script_expected_result="0">/opt/webapi-cssfilter-w3c-tests/cssfilter/filter_position_sticky-manual.html</test_script_entry>
        </description>
      </testcase>
