          </steps>
          <test_script_entry test_script_expected_result="0">/opt/webapi-cssfilter-w3c-tests/cssfilter/csswg/position-fixed-002-manual.xht</test_script_entry>
        </description>
      </testcase>
      <testcase component="WebAPI/IVI/CSS" execution_type="manual" priority="P1" id="position-fixed-003" purpose="Check if elements that are set to 'position: fixed' are fixed with respect to the viewport.">
        <description>
          <steps>
            <step order="1">
              <step_desc>Click "Run" button.</step_desc>
              <expected>Test passes if the blue stripe does not move when the page is scrolled.</expected>
            </step>
