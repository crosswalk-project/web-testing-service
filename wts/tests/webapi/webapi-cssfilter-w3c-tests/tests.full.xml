        <description>
          <steps>
            <step order="1">
              <step_desc>Click "Run" button.</step_desc>
              <expected>The test passes if there is no square displayed.</expected>
            </step>
          </steps>
          <test_script_entry test_script_expected_result="0">/opt/webapi-cssfilter-w3c-tests/cssfilter/filter_custom_shaders-manual.html</test_script_entry>
        </description>
      </testcase>
