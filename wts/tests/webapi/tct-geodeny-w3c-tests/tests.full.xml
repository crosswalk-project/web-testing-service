<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl"  href="./testcase.xsl"?>
<test_definition>
  <suite name="tct-geodeny-w3c-tests" category="W3C/HTML5 APIs">
    <set name="Geolocation" type="js">
      <testcase purpose="Check if getCurrentPosition() invokes onPositionErrorCallback() when the operation fails before the timeout expires" type="compliance" status="approved" component="WebAPI/Location/Geolocation API Specification" execution_type="manual" priority="P3" id="Geolocation_getCurrentPosition_operation_failed">
        <description>
          <pre_condition>disable GPS and network</pre_condition>
          <post_condition/>
          <steps>
            <step order="1">
              <step_desc>If prompts for permission to use geolocation, please decline</step_desc>
              <expected>PASS</expected>
            </step>
          </steps>
          <test_script_entry>/opt/tct-geodeny-w3c-tests/geodeny/Geolocation_getCurrentPosition_operation_failed-manual.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion usage="true" interface="Geolocation" specification="Geolocation API Specification" section="Location" category="Tizen W3C API Specifications"/>
            <spec_url>http://www.w3.org/TR/2012/PR-geolocation-API-20120510/#geolocation</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase purpose="Check if watchPosition() invokes onPositionErrorCallback() when the operation fails before the timeout expires" type="compliance" status="approved" component="WebAPI/Location/Geolocation API Specification" execution_type="manual" priority="P3" id="Geolocation_watchPosition_operation_failed">
        <description>
          <pre_condition>disable GPS and network</pre_condition>
          <post_condition/>
          <steps>
            <step order="1">
              <step_desc>If prompts for permission to use geolocation, please decline</step_desc>
              <expected>PASS</expected>
            </step>
          </steps>
          <test_script_entry>/opt/tct-geodeny-w3c-tests/geodeny/Geolocation_watchPosition_operation_failed-manual.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion usage="true" interface="Geolocation" specification="Geolocation API Specification" section="Location" category="Tizen W3C API Specifications"/>
            <spec_url>http://www.w3.org/TR/2012/PR-geolocation-API-20120510/#geolocation</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase purpose="Check if error callback is called with correct code" type="compliance" status="approved" component="WebAPI/Location/Geolocation API Specification" execution_type="manual" priority="P3" id="errorcallback_PERMISSION_DENIED">
        <description>
          <pre_condition>disable GPS and network</pre_condition>
          <post_condition/>
          <steps>
            <step order="1">
              <step_desc>If prompts for permission to use geolocation, please decline</step_desc>
              <expected>Pass</expected>
            </step>
          </steps>
          <test_script_entry>/opt/tct-geodeny-w3c-tests/geodeny/w3c/t-manual.html?00001</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion usage="true" interface="Geolocation" specification="Geolocation API Specification" section="Location" category="Tizen W3C API Specifications"/>
            <spec_url>http://www.w3.org/TR/2012/PR-geolocation-API-20120510/#security</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
    </set>
  </suite>
</test_definition>
