<test_definition>
  <suite name="webapi-imports-w3c-tests" category="W3C/HTML5 APIs">
    <set name="Imports" type="js">
      <testcase purpose="Check if the import attribute must return null when the link does not represent an import" type="compliance" status="approved" component="WebAPI/Web Components/HTML Imports" execution_type="auto" priority="P1" id="LinkImport_import_not_import">
        <description>
          <test_script_entry>/opt/webapi-imports-w3c-tests/imports/LinkImport_import_not_import.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion element_type="attribute" element_name="import" interface="LinkImport" specification="HTML Imports" section="Web Components" category="W3C API Specifications"/>
            <spec_url>https://dvcs.w3.org/hg/webcomponents/raw-file/tip/spec/imports/index.html</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase purpose="Check if the import attribute must return null when the link element is not in a Document" type="compliance" status="approved" component="WebAPI/Web Components/HTML Imports" execution_type="auto" priority="P1" id="LinkImport_import_not_in_document">
        <description>
          <test_script_entry>/opt/webapi-imports-w3c-tests/imports/LinkImport_import_not_in_document.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion element_type="attribute" element_name="import" interface="LinkImport" specification="HTML Imports" section="Web Components" category="W3C API Specifications"/>
            <spec_url>https://dvcs.w3.org/hg/webcomponents/raw-file/tip/spec/imports/index.html</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase purpose="Check if the import attribute must return null when the element removed flag of the import is set" type="compliance" status="approved" component="WebAPI/Web Components/HTML Imports" execution_type="auto" priority="P1" id="LinkImport_import_set_removed_flag">
        <description>
          <test_script_entry>/opt/webapi-imports-w3c-tests/imports/LinkImport_import_set_removed_flag.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion element_type="attribute" element_name="import" interface="LinkImport" specification="HTML Imports" section="Web Components" category="W3C API Specifications"/>
            <spec_url>https://dvcs.w3.org/hg/webcomponents/raw-file/tip/spec/imports/index.html</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase purpose="Check if the import attribute must return the imported document for the import" type="compliance" status="approved" component="WebAPI/Web Components/HTML Imports" execution_type="auto" priority="P1" id="LinkImport_import_valid">
        <description>
          <test_script_entry>/opt/webapi-imports-w3c-tests/imports/LinkImport_import_valid.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion element_type="attribute" element_name="import" interface="LinkImport" specification="HTML Imports" section="Web Components" category="W3C API Specifications"/>
            <spec_url>https://dvcs.w3.org/hg/webcomponents/raw-file/tip/spec/imports/index.html</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
    </set>
  </suite>
</test_definition>
